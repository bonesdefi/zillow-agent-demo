# Streamlit Secrets Configuration
# 
# For local development: Copy this file to .streamlit/secrets.toml and add your keys
# For Streamlit Cloud: Add these secrets in the Streamlit Cloud dashboard under "Secrets"
#
# To set secrets in Streamlit Cloud:
# 1. Go to your app on https://share.streamlit.io
# 2. Click on "Settings" (⚙️) → "Secrets"
# 3. Paste the contents below (without the comments) and update with your actual keys
# 4. Save and restart your app

# Anthropic API Key (for Claude AI)
ANTHROPIC_API_KEY = "your_anthropic_api_key_here"

# Optional: Anthropic Model (defaults to claude-3-haiku-20240307)
ANTHROPIC_MODEL = "claude-3-haiku-20240307"

# RapidAPI Key (for Zillow data)
RAPIDAPI_KEY = "your_rapidapi_key_here"

# Zillow API Configuration (optional - uses defaults if not set)
ZILLOW_API_BASE_URL = "https://real-time-zillow-data.p.rapidapi.com"
ZILLOW_API_HOST = "real-time-zillow-data.p.rapidapi.com"

# Zillow Market API Configuration (optional - uses defaults if not set)
ZILLOW_MARKET_API_BASE_URL = "https://zillow-working-api.p.rapidapi.com"
ZILLOW_MARKET_API_HOST = "zillow-working-api.p.rapidapi.com"

